@{
    ViewData["Title"] = "Company Profile";
}

<!-- Main CSS Styles -->
<style>
    .profile-container {
        max-width: 1400px;
        margin:1rem auto;
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 20px;
    }

    /* Company Profile Section */
    .profile-section {
        background: #0a2540;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .profile-header {
        background: linear-gradient(135deg, #1e3a5f 0%, #0a2540 100%);
        padding: 20px 30px;
        border-bottom: 3px solid #00d4ff;
    }

        .profile-header h2 {
            color: #ffffff;
            font-size: 24px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .profile-header i {
            font-size: 28px;
        }

    /* Carousel Styles */
    .carousel-container {
        position: relative;
        background: #0d1b2a;
        padding: 30px;
    }

    .carousel-wrapper {
        position: relative;
        overflow: hidden;
        border-radius: 8px;
    }

    .carousel-slide {
        display: none;
        animation: fadeIn 0.5s;
    }

        .carousel-slide.active {
            display: block;
        }

        .carousel-slide img {
            width: 100%;
            height: 500px;
            object-fit: cover;
            border-radius: 8px;
        }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    .carousel-controls {
        position: absolute;
        top: 50%;
        width: 93%;
        display: flex;
        justify-content: space-between;
        transform: translateY(-50%);
        padding: 0 20px;
        pointer-events: none;
    }

    .carousel-btn {
        pointer-events: all;
        background: rgba(0, 212, 255, 0.8);
        border: none;
        color: white;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        font-size: 24px;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .carousel-btn:hover {
            background: #00d4ff;
            transform: scale(1.1);
        }

    .carousel-indicators {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

    .indicator {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        cursor: pointer;
        transition: all 0.3s;
    }

        .indicator.active {
            background: #00d4ff;
            width: 30px;
            border-radius: 6px;
        }

    /* Thumbnail Gallery */
    .thumbnail-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
        gap: 10px;
        margin-top: 20px;
    }

    .thumbnail {
        height: 80px;
        border-radius: 6px;
        overflow: hidden;
        cursor: pointer;
        border: 3px solid transparent;
        transition: all 0.3s;
    }

        .thumbnail:hover {
            border-color: #00d4ff;
            transform: translateY(-3px);
        }

        .thumbnail.active {
            border-color: #00d4ff;
        }

        .thumbnail img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Content Section */
    .content-section {
        background: #0d1b2a;
        padding: 30px;
        margin-top: 20px;
        border-radius: 8px;
    }

    /* Navigation Section */
    .navigation-section {
        background: #0a2540;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        height: fit-content;
    }

    .nav-header {
        background: linear-gradient(135deg, #1e3a5f 0%, #0a2540 100%);
        padding: 20px 30px;
        border-bottom: 3px solid #00d4ff;
    }

        .nav-header h2 {
            color: #ffffff;
            font-size: 24px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 12px;
        }

    .nav-links {
        padding: 20px;
    }

    .nav-link {
        display: block;
        padding: 15px 20px;
        margin-bottom: 12px;
        background: #0d1b2a;
        color: #ffffff;
        text-decoration: none;
        border-radius: 6px;
        border-left: 4px solid transparent;
        transition: all 0.3s;
        font-size: 16px;
        cursor: pointer;
    }

        .nav-link:hover {
            background: #1e3a5f;
            border-left-color: #00d4ff;
            transform: translateX(5px);
            box-shadow: 0 4px 12px rgba(0, 212, 255, 0.2);
        }

        .nav-link.active {
            background: #1e3a5f;
            border-left-color: #00d4ff;
            font-weight: 600;
        }

    /* Latest News Section */
    .news-section {
        background: #0a2540;
        border-radius: 8px;
        overflow: hidden;
        margin-top: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .news-header {
        background: linear-gradient(135deg, #1e3a5f 0%, #0a2540 100%);
        padding: 20px 30px;
        border-bottom: 3px solid #00d4ff;
    }

        .news-header h2 {
            color: #ffffff;
            font-size: 24px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 12px;
        }

    .news-content {
        padding: 20px;
    }

    .news-item {
        background: #0d1b2a;
        padding: 20px;
        border-radius: 6px;
        margin-bottom: 15px;
        border-left: 4px solid #00d4ff;
        transition: all 0.3s;
    }

        .news-item:hover {
            transform: translateX(5px);
            box-shadow: 0 4px 12px rgba(0, 212, 255, 0.2);
        }

        .news-item h3 {
            color: #00d4ff;
            font-size: 16px;
            margin-bottom: 10px;
            line-height: 1.5;
        }

    .news-date {
        color: #8899aa;
        font-size: 14px;
    }

    /* Partial View Container */
    #partialViewContainer {
        background: #0d1b2a;
        padding: 30px;
        border-radius: 8px;
        margin-top: 20px;
        color: #ffffff;
        min-height: 200px;
    }

    /* Responsive Design */
    @@media (max-width: 1024px) {
        .profile-container {
        grid-template-columns: 1fr;
    }

    .carousel-slide img {
        height: 400px;
    }

    }

    @@media (max-width: 768px) {
        body

    {
        padding: 10px;
    }

    .profile-header h2,
    .nav-header h2,
    .news-header h2 {
        font-size: 20px;
    }

    .carousel-slide img {
        height: 300px;
    }

    .thumbnail-gallery {
        grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    }

    .thumbnail {
        height: 60px;
    }

    .carousel-btn {
        width: 40px;
        height: 40px;
        font-size: 20px;
    }

    }

    @@media (max-width: 480px) {
        .profile-header, .nav-header, .news-header

    {
        padding: 15px 20px;
    }

    .carousel-container,
    .content-section,
    #partialViewContainer {
        padding: 20px;
    }

    .carousel-slide img {
        height: 250px;
    }

    .nav-link {
        padding: 12px 15px;
        font-size: 14px;
    }

    .news-item {
        padding: 15px;
    }

    }
</style>

