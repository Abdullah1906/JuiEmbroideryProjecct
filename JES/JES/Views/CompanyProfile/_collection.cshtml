@model List<JES.Models.CollectionItem>

<style>
    /* Customize the previous and next arrows */
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: rgba(0, 123, 255, 0.8); /* Blue background */
        border-radius: 50%; /* Make it circular */
        width: 40px;
        height: 40px;
        background-size: 50%, 50%;
        background-image: none; /* Remove default arrow */
        position: relative;
    }

        /* Add custom arrow using CSS */
        .carousel-control-prev-icon::after,
        .carousel-control-next-icon::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 12px;
            height: 12px;
            border-top: 2px solid white;
            border-right: 2px solid white;
            transform: translate(-50%, -50%) rotate(135deg);
        }

        .carousel-control-next-icon::after {
            transform: translate(-50%, -50%) rotate(-45deg);
        }
</style>

<div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
    <!-- Carousel Indicators -->
    <div class="carousel-indicators">
        @for (int i = 0; i < Model.Count; i++)
        {
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i+1)"></button>
        }
    </div>

    <!-- Carousel Items -->
    <div class="carousel-inner m-auto" style="width:50%">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <img src="@Url.Content(Model[i].ImageUrl)" class="d-block w-100" alt="@Model[i].Title" style="height:380px;filter:contrast(1.3)">
                <div class="carousel-caption d-none d-md-block">
                    <h5 style="color:cornsilk">@Model[i].Title</h5>
                  
                </div>
            </div>
        }
    </div>

    <!-- Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


