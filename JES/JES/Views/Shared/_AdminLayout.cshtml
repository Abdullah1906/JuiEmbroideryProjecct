    <style>
                body {
            padding-top: 56px;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {

            background-color: #192a56;
            color: white;
            transition: transform 0.3s ease-in-out;
            overflow-y: auto;
            overflow-x: hidden;
            height: calc(100vh - 56px);
            position: relative;
        }

        /* Sidebar content container */
        .sidebar .offcanvas-body {
            height: 100%;
            overflow-y: auto;
            overflow-x: hidden;
        }

        /* Sidebar navigation list */
        .sidebar .nav {
            min-height: 100%;
            padding-bottom: 2rem;
        }

        /* Sidebar scrollbar styling */
        .sidebar::-webkit-scrollbar {
            width: 8px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 4px;
            margin: 4px 0;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.4);
            border-radius: 4px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar::-webkit-scrollbar-thumb:hover {
            background: rgba(255, 255, 255, 0.6);
        }

        .sidebar::-webkit-scrollbar-corner {
            background: rgba(255, 255, 255, 0.1);
        }

        /* Firefox scrollbar */
        .sidebar {
            scrollbar-width: thin;
            scrollbar-color: rgba(255, 255, 255, 0.4) rgba(255, 255, 255, 0.1);
        }

        /* Enhanced scrollbar for offcanvas-body */
        .sidebar .offcanvas-body::-webkit-scrollbar {
            width: 8px;
        }

        .sidebar .offcanvas-body::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 4px;
            margin: 4px 0;
        }

        .sidebar .offcanvas-body::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.4);
            border-radius: 4px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar .offcanvas-body::-webkit-scrollbar-thumb:hover {
            background: rgba(255, 255, 255, 0.6);
        }

            .sidebar .nav-link.active {
                background-color: #273c75;
                font-weight: bold;
            }

        .submenu .nav-link.active {
            background-color: #6c757d;
            font-weight: bold;
        }

        .arrow {
            margin-left: auto;
            transition: transform 0.2s ease;
        }

        .collapse.show + .arrow,
        .nav-link[aria-expanded="true"] .arrow {
            transform: rotate(180deg);
        }

        /* Content area */
        .content {
            padding: 20px;
            transition: margin-left 0.3s ease-in-out;
        }

        /* Mobile sidebar behavior */
        @@media (max-width: 991.98px) {
            .sidebar {
                position: fixed;
                top: 56px;
                left: 0;
                width: 280px;
                z-index: 1030;
                transform: translateX(-100%);
            }

                .sidebar.show {
                    transform: translateX(0);
                }

            .content {
                margin-left: 0;
                width: 100%;
            }

            .sidebar-backdrop {
                position: fixed;
                top: 56px;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                z-index: 1025;
                display: none;
            }

                .sidebar-backdrop.show {
                    display: block;
                }
        }

        /* Desktop sidebar behavior */
        @@media (min-width: 992px) {
            .sidebar {
                position: fixed;
                top: 56px;
                left: 0;
                width: 250px;
                z-index: 1030;
            }

            .content {
                margin-left: 250px;
            }

            .sidebar-toggle {
                display: none !important;
            }
        }

        /* Small screens adjustments */
        @@media (max-width: 575.98px) {
            .content {
                padding: 15px 10px;
            }

            .sidebar {
                width: 100%;
            }

            .navbar-brand {
                font-size: 1rem;
            }

            .user-dropdown .dropdown-toggle span {
                display: none;
            }
        }

        /* Medium screens adjustments */
        @@media (min-width: 576px) and (max-width: 767.98px) {
            .content {
                padding: 15px;
            }

            .sidebar {
                width: 300px;
            }
        }

        /* Large screens and above */
        @@media (min-width: 992px) {
            .sidebar {
                width: 250px;
            }

            .content {
                margin-left: 250px;
            }
        }

        /* Extra large screens */
        @@media (min-width: 1200px) {
            .content {
                padding: 25px;
            }
        }

        /* Footer */
        footer.footeer {
                  left: 0;
                  bottom: 0;
                  width: 100%;

        }

        /* Navigation improvements */
        .nav-link {
            padding: 0.75rem 1rem;
            border-radius: 0.25rem;
            margin: 0.125rem 0;
            transition: all 0.2s ease;
            white-space: nowrap;
        }

        .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
            transform: translateX(2px);
        }

        /* Smooth scrolling for sidebar */
        .sidebar,
        .sidebar .offcanvas-body {
            scroll-behavior: smooth;
        }

        /* Ensure all nav items are visible */
        .sidebar .nav-item {
            margin-bottom: 0.25rem;
        }

        /* Better spacing for submenu items */
        .submenu .nav-item {
            margin-bottom: 0.125rem;
        }

                /* Submenu styling */
        .submenu {
            margin-left: 1rem;
            background-color: rgba(255, 255, 255, 0.05);
            border-radius: 0.25rem;
            margin-top: 0.25rem;
            margin-bottom: 0.25rem;
            overflow: hidden;
        }

        .submenu .nav-link {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            margin: 0.125rem 0;
        }

        .submenu .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        /* Ensure submenu is visible when expanded */
        .submenu.show {
            display: block !important;
        }

        /* Reports submenu specific styling */
        #submenu1 {
            background-color: rgba(255, 255, 255, 0.05);
            border-radius: 0.25rem;
            margin: 0.25rem 0;
            padding: 0.5rem 0;
        }

        #submenu1.show {
            display: block !important;
        }

        /* User dropdown improvements */
        .user-dropdown .dropdown-toggle {
            padding: 0.5rem;
            border-radius: 0.375rem;
        }

            .user-dropdown .dropdown-toggle:hover {
                background-color: rgba(255, 255, 255, 0.1);
            }

        /* Responsive table adjustments */
        @@media (max-width: 767.98px) {
            .table-responsive {
                font-size: 0.875rem;
            }
        }

        /* Card improvements for mobile */
        @@media (max-width: 575.98px) {
            .card {
                margin-bottom: 1rem;
            }

            .card-body {
                padding: 1rem 0.75rem;
            }
        }

    </style>
