@{
    ViewData["Title"] = "Gallery";

}
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JS Bundle (includes Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .gallery-container {
        padding: 20px;
        text-align: center;
    }
    .gallery-container h2 {
        font-size: 2.5em;
        margin-bottom: 20px;
        color: #333;
        }

    .gallery-img{
        width:380px;
        height:250px;  
    }

</style>

<div class="gallery-container">
    <h2 class="text-success">Gallery</h2>
    <p><b>Explore our collection of images showcasing our products, services, and company events.</b></p>
    <div class="row">
        <div class="col-lg-3 col-md-6 mb-3">
            <img src="https://tse4.mm.bing.net/th/id/OIP.u0QFXwdAQZhbN71xUPBgmQHaEJ?cb=12&rs=1&pid=ImgDetMain&o=7&rm=3"
                 class="img-fluid rounded shadow-sm gallery-img"
                 alt="Gallery Image 1"
                 data-bs-toggle="modal"
                 data-bs-target="#imageModal"
                 data-img-src="https://tse4.mm.bing.net/th/id/OIP.u0QFXwdAQZhbN71xUPBgmQHaEJ?cb=12&rs=1&pid=ImgDetMain&o=7&rm=3">
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <img src="https://images.pexels.com/photos/7205803/pexels-photo-7205803.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260"
                 class="img-fluid rounded shadow-sm gallery-img"
                 alt="Gallery Image 2"
                 data-bs-toggle="modal"
                 data-bs-target="#imageModal"
                 data-img-src="https://images.pexels.com/photos/7205803/pexels-photo-7205803.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260">
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <img src="https://tse1.explicit.bing.net/th/id/OIP.5GmYOhmzV-STL4vCTez4iAHaFg?cb=12&rs=1&pid=ImgDetMain&o=7&rm=3"
                 class="img-fluid rounded shadow-sm gallery-img"
                 alt="Gallery Image 3"
                 data-bs-toggle="modal"
                 data-bs-target="#imageModal"
                 data-img-src="https://tse1.explicit.bing.net/th/id/OIP.5GmYOhmzV-STL4vCTez4iAHaFg?cb=12&rs=1&pid=ImgDetMain&o=7&rm=3">
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <img src="https://static.vecteezy.com/system/resources/thumbnails/042/666/516/small_2x/ai-generated-digital-textile-industry-automatic-embroidery-machine-in-a-factory-generative-ai-photo.jpg"
                 class="img-fluid rounded shadow-sm gallery-img"
                 alt="Gallery Image 4"
                 data-bs-toggle="modal"
                 data-bs-target="#imageModal"
                 data-img-src="https://static.vecteezy.com/system/resources/thumbnails/042/666/516/small_2x/ai-generated-digital-textile-industry-automatic-embroidery-machine-in-a-factory-generative-ai-photo.jpg">
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <img src="https://static.vecteezy.com/system/resources/thumbnails/042/666/525/small_2x/ai-generated-beautiful-multi-colored-bright-machine-embroidery-digital-textile-industry-generative-ai-photo.jpg"
                 class="img-fluid rounded shadow-sm gallery-img"
                 alt="Gallery Image 4"
                 data-bs-toggle="modal"
                 data-bs-target="#imageModal"
                 data-img-src="https://static.vecteezy.com/system/resources/thumbnails/042/666/525/small_2x/ai-generated-beautiful-multi-colored-bright-machine-embroidery-digital-textile-industry-generative-ai-photo.jpg">
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-body p-0">
                    <img src="" id="modalImage" class="img-fluid w-100" alt="Full Image">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">❌</button>
                </div>
            </div>
        </div>
    </div>

</div>


<script>
    // When any image with class 'gallery-img' is clicked
    document.querySelectorAll('.gallery-img').forEach(img => {
      img.addEventListener('click', function () {
        const modalImg = document.getElementById('modalImage');
        modalImg.src = this.getAttribute('data-img-src');
      });
    });
</script>
