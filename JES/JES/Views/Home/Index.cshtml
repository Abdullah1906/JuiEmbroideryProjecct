<style>
      /* Section Background */
.core-customer-section {
    background: linear-gradient(135deg, #fefefe, #e6f0ff);
    padding: 80px 0;
}

/* Title Styling */
.core-customer-section h2 {
    font-weight: 700;
    letter-spacing: 1px;
    color: #2a2a2a;
}

.core-customer-section p {
    color: #6c757d;
    font-size: 15px;
    margin-top: 10px;
}

.core-customer-section > .container .text-center > div {
    width: 60px;
    height: 3px;
    background-color: #007bff;
    margin: 10px auto 0;
    border-radius: 2px;
}

/* Glass Card */
    .glass-card {
        background: rgba(255, 255, 255, 0.65);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
        transition: all 0.35s ease;
        width: 180px;
        height: 240px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
    }

        .glass-card::before {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient( 120deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0) 50%, rgba(255, 255, 255, 0.15) 100% );
            transform: rotate(25deg);
            pointer-events: none;
            transition: all 0.5s ease;
        }

        .glass-card:hover::before {
            transform: rotate(25deg) translateX(10%) translateY(5%);
        }

    /* Optional: subtle shimmer effect */
    @@keyframes shimmer {
        0% {
            transform: rotate(25deg) translateX(-100%) translateY(-50%);
        }

        100% {
            transform: rotate(25deg) translateX(100%) translateY(-50%);
        }
    }

    .glass-card::after {
        content: "";
        position: absolute;
        top: 0;
        left: -75%;
        width: 50%;
        height: 100%;
        background: linear-gradient( 120deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.12) 50%, rgba(255, 255, 255, 0) 100% );
        animation: shimmer 3s infinite;
        pointer-events: none;
    }



/* Hover Effects */
.glass-card:hover {
    transform: translateY(-8px) scale(1.03);
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
    background: rgba(255, 255, 255, 0.85);
}

/* Customer Image */
.glass-card img {
    width: 120px;
    height: 120px;
    object-fit: cover;
    border-radius: 50%;
    border: 3px solid rgba(0, 123, 255, 0.3);
    padding: 3px;
    transition: all 0.3s ease;
}

.glass-card:hover img {
    transform: scale(1.1);
    border-color: #007bff;
}

/* Customer Name */
.glass-card h6 a {
    color: #2a2a2a;
    font-weight: 600;
    font-size: 14px;
    transition: color 0.3s ease;
}

.glass-card h6 a:hover {
    color: #007bff;
}

/* Carousel Item */
.nonloop-block-3 .item {
    display: flex;
    justify-content: center;
    margin: 10px;
}

/* Owl Carousel Navigation Buttons */
.owl-carousel .owl-nav button {
    position: absolute;
    top: 40%;
    transform: translateY(-50%);
    background: #007bff;
    color: #fff !important;
    border-radius: 50%;
    width: 42px;
    height: 42px;
    font-size: 20px !important;
    border: none;
    outline: none;
    transition: all 0.3s ease;
}

.owl-carousel .owl-nav button:hover {
    background: #0056b3;
}

.owl-carousel .owl-prev {
    left: -50px;
}

.owl-carousel .owl-next {
    right: -50px;
}

/* Responsive */
@@media (max-width: 768px) {
    .glass-card {
        width: 150px !important;
        height: 200px !important;
        padding: 0.8rem;
    }

    .glass-card img {
        width: 80px;
        height: 80px;
    }

    .glass-card h6 {
        font-size: 13px !important;
    }

    .owl-carousel .owl-nav button {
        display: none;
    }
}

@@media (max-width: 575.98px) {
    .glass-card {
        padding: 0.6rem;
    }
}

    /* Carousel Container Hover Effect */
    .nonloop-block-3 {
        padding: 20px 0;
        transition: all 0.35s ease;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.1); /* subtle background */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

        .nonloop-block-3:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
            background: rgba(255, 255, 255, 0.15);
        }

        /* Optional: smooth transition for carousel items when hovered */
        .nonloop-block-3 .item {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .nonloop-block-3 .item:hover {
                transform: translateY(-5px) scale(1.02);
            }
/* Glass Card with Subtle Light Reflection */


</style>
