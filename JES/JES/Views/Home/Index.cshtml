@model List<Product>
﻿
@{
    ViewData["Title"] = "Home Page";
}


<!-- About Section -->
<section id="about" class="about-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <div class="about-content">
                    <h2 class="section-title">About Us</h2>
                    <h3 class="mb-4" style="color: var(--accent-color);">A.K Zaman</h3>
                    <p class="lead mb-4">Managing Director at Computerized Embroidery</p>
                    <p style="color: var(--text-light); font-size: 1.1rem;">
                        We are a professional embroidery company specializing in computerized embroidery solutions.
                        With state-of-the-art technology and skilled craftsmen, we deliver exceptional quality
                        embroidery work for various applications.
                    </p>
                    <p style="color: var(--text-light); font-size: 1.1rem;">
                        Our commitment to excellence and customer satisfaction has made us a trusted name
                        in the embroidery industry. With over a decade of experience, we've perfected the art
                        of transforming your vision into reality.
                    </p>
                    <div class="about-stats mt-4">
                        <div class="stat-item">
                            <i class="fas fa-calendar-check"></i>
                            <h4>10+</h4>
                            <p>Years Experience</p>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-project-diagram"></i>
                            <h4>5000+</h4>
                            <p>Projects Done</p>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-users"></i>
                            <h4>200+</h4>
                            <p>Happy Clients</p>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-award"></i>
                            <h4>25+</h4>
                            <p>Awards Won</p>
                        </div>
                    </div>
                </div>
            </div>
        
<div class="col-lg-6 gap-2">
    <div class="about-image">
        <div class="row">
            <div class="video-wrapper">
                <iframe 
                    width="100%" 
                    src="https://www.youtube.com/embed/RTT3Gt9Cv58?rel=0&modestbranding=1&autohide=1&showinfo=0&controls=1"
                    title="YouTube video player"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                    style="position: relative; z-index: 2; width: 100%; border-radius: 8px;">
                </iframe>
            </div>
        </div>
    </div>
</div>

        </div>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="services-section">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Our Services</h2>
            <p class="lead mt-3">Comprehensive embroidery solutions for all your needs</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-laptop"></i>
                    </div>
                    <h3>Computerized Embroidery</h3>
                    <p style="color: var(--text-light);">
                        Advanced computerized embroidery machines for precise and intricate designs
                        with consistent quality.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-pencil-ruler"></i>
                    </div>
                    <h3>Custom Design</h3>
                    <p style="color: var(--text-light);">
                        Professional design services to create unique embroidery patterns tailored
                        to your specifications.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-industry"></i>
                    </div>
                    <h3>Production Capacity</h3>
                    <p style="color: var(--text-light);">
                        High-volume production capabilities to handle large orders with consistent
                        quality and timely delivery.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-palette"></i>
                    </div>
                    <h3>Color Matching</h3>
                    <p style="color: var(--text-light);">
                        Precise color matching services to ensure your designs come to life exactly
                        as envisioned.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-check-double"></i>
                    </div>
                    <h3>Quality Control</h3>
                    <p style="color: var(--text-light);">
                        Rigorous quality control processes to ensure every piece meets our high
                        standards of excellence.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-shipping-fast"></i>
                    </div>
                    <h3>Fast Turnaround</h3>
                    <p style="color: var(--text-light);">
                        Efficient workflow and dedicated team to ensure quick turnaround times
                        without compromising quality.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Products Section -->
<section id="products" class="products-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title fw-bold">Our Products</h2>
            <p class="lead mt-3 text-muted">Wide range of embroidered products for various applications</p>
        </div>

        <!-- Render Partial with model -->
        @await Html.PartialAsync("_ProductPartial", Model)
    </div>
</section>




<!-- Team Section -->
<section id="team" class="team-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Our Team</h2>
            <p class="lead mt-3">Dedicated professionals committed to excellence</p>
        </div>

        <!-- Team Navigation -->
        <ul class="nav nav-pills justify-content-center mb-4" id="teamTabs" role="tablist">
