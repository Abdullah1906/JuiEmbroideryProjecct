                                        <img src="@product.ImageUrl"
                                             alt="@product.CompanyName"
                                             class="img-fluid mx-auto d-block mb-2"
                                             style="width: 120px; height: 120px; object-fit: fill;" />
                                    </a>
                                </div>
                                <div style="height:30%;">
                                    <h6 class="text-dark mb-1" style="font-size: 14px;">
