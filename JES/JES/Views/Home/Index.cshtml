<!-- Core Customer Slider Section -->
<section id="core-customers" class="core-customer-section py-5" >
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title fw-bold" style="margin-bottom:0px">Our Core Customers</h2>
            <p class="lead mt-3 text-muted">Trusted clients who rely on our embroidery solutions</p>
        </div>

        <div id="coreCustomerCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @{
                    int chunkSize = 3; // Number of customers per slide
                    var customerChunks = Model.CoreCustomers
                                         .Select((c, i) => new { Customer = c, Index = i })
                                         .GroupBy(x => x.Index / chunkSize)
                                         .Select(g => g.Select(x => x.Customer).ToList())
                                         .ToList();
                }

                @for (int i = 0; i < customerChunks.Count; i++)
                {
                    var chunk = customerChunks[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="row justify-content-center">
                            @foreach (var customer in chunk)
                            {
                                <div class="col-sm-6 col-md-3">
                                    <div class="customer-card text-center p-4 rounded shadow-sm">
                                        @if (!string.IsNullOrEmpty(customer.ImageUrl))
                                        {
                                            <img src="@customer.ImageUrl" alt="@customer.CompanyName" 
                                                 class="img-fluid mb-3 rounded-circle" 
                                                 style="width:100px; height:100px; object-fit:cover;" />
                                        }
                                        <h5 class="fw-bold">@customer.CompanyName</h5>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#coreCustomerCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#coreCustomerCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>









