<!-- Core Customer Slider Section -->
<section id="core-customers" class="core-customer-section py-5" >

<div class="site-section bg-light" style="padding:30px">
    <div class="container">
        <div class="text-center">
            <h2 class="fw-bold text-uppercase" style="color:#2a2a2a;">Our Core Customers</h2>
            <div style="width:60px; height:3px; background-color:#007bff; margin:10px auto 0;"></div>
