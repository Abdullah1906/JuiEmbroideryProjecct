@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
<style>
        :root {
            --neon-primary: #00f0ff;
            --neon-secondary: #ff00f7;
            --neon-accent: #ffe600;
        }
        .card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            cursor: pointer;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25) !important;
            }

    .client-card {
        position: relative;
        border-radius: 24px;
            background: #00384f;
        backdrop-filter: blur(16px);
        padding: 25px 20px;
        text-align: center;
        color: #fff;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.35s ease;
        box-shadow: 0 10px 25px rgba(0,0,0,0.3);
    }

    /* Neon border glow for client card */
    .client-card::after {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: inherit;
        border: 3px solid transparent;
        background: linear-gradient(90deg, #4df3ff, #ff6ec4, #f7b42c);
        background-size: 300% 300%;
        animation: gradient-border 6s ease infinite;

        /* Mask to keep background only on border */
        -webkit-mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
        -webkit-mask-composite: xor;
        mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
        mask-composite: exclude;

        z-index: 1; /* sits above content */
        pointer-events: none;
    }

    @@keyframes gradient-border {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }


    /* Hover Effects */
    .client-card:hover {
        transform: translateY(-10px) scale(1.04);
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
    }

    /* Icon wrapper */
    .client-card .icon-wrapper {
        width: 70px;
        height: 70px;
        margin: 0 auto 15px;
        border-radius: 50%;
            border-radius: 50%;
            background: radial-gradient(circle at 30% 30%, #ffffff44, #00000011);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        z-index: 1;
        position: relative;
        box-shadow: inset 0 0 12px rgba(255,255,255,0.25), 0 6px 14px rgba(0,0,0,0.25);
        animation: icon-pulse 2s infinite alternate;
    }
    /* Advanced glowing pulsating icon */
    .client-card .icon-wrapper {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        border-radius: 50%;
        background: radial-gradient(circle at 30% 30%, #ffffff44, #00000011);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 36px;
        z-index: 2;
        position: relative;
        box-shadow: 0 0 15px rgba(77,243,255,0.8),
                    0 0 30px rgba(77,243,255,0.5),
                    inset 0 0 10px rgba(255,255,255,0.2);
        animation: pulse-icon 2.5s infinite ease-in-out;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .client-card .icon-wrapper:hover {
        transform: scale(1.2);
        box-shadow: 0 0 25px rgba(77,243,255,1),
                    0 0 50px rgba(77,243,255,0.7),
                    inset 0 0 12px rgba(255,255,255,0.3);
    }

    @@keyframes pulse-icon {
        0%, 100% { transform: scale(1); opacity: 0.9; }
        50% { transform: scale(1.15); opacity: 1; }
    }

    /* Small description */
    .client-card small {
        color: #cfefff;
        font-size: 0.8rem;
        margin-bottom: 4px;
        display: block;
        z-index: 1;
        position: relative;
        text-transform: uppercase;
        letter-spacing: 1.2px;
    }

    /* Heading */
    .client-card h6 {
        color: #fff;
        font-size: 1rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
        opacity: 0.85;
        z-index: 1;
        position: relative;
    }

    /* Big value */
    .client-card h2 {
        font-size: 2.5rem;
        font-weight: 900;
        margin-bottom: 0;
        color: #fff;
        background: linear-gradient(90deg, #ff6ec4, #7873f5, #17ead9);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 200% 200%;
        animation: shimmer 3s ease infinite;
        text-shadow: 0 3px 8px rgba(0,0,0,0.4);
    }

    /* Shimmer animation */
    @@keyframes shimmer {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }








    /* Neon particles only for charts */
    .particles .particle.neon {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        position: absolute;
        background: linear-gradient(45deg, #4df3ff, #ff6ec4, #f7b42c);
        box-shadow: 0 0 10px #4df3ff, 0 0 20px #ff6ec4, 0 0 30px #f7b42c;
        animation: neon-float 4s ease-in-out infinite;
        z-index: 0;
    }

    /* Floating animation */
    @@keyframes neon-float {
        0% { transform: translateY(0px) scale(1); opacity: 0.7; }
        50% { transform: translateY(-20px) scale(1.3); opacity: 1; }
        100% { transform: translateY(0px) scale(1); opacity: 0.7; }
    }

    /* Chart canvas neon glow */
    .client-card canvas {
        border-radius: 20px;
        box-shadow: 0 0 20px #4df3ff55, 0 0 40px #ff6ec455, 0 0 60px #f7b42c33 inset;
        background: rgba(0,0,0,0.2);
        transition: transform 0.3s ease;
    }

    .client-card canvas:hover {
        transform: scale(1.03);
        box-shadow: 0 0 30px #4df3ffaa, 0 0 60px #ff6ec4aa, 0 0 90px #f7b42c66 inset;
    }


</style>


<div class="row g-4">

    <div class="row g-4 mt-2">

        <!-- Total Purchase -->
        <div class="col-md-6 col-xl-3">
            <div class="client-card">
                <div class="icon-wrapper">
                    <i class="fas fa-shopping-cart text-warning"></i>
                </div>
                <small>Total Purchase</small>
                <h6>Purchases</h6>
                <h2>Purchases</h2>
                <div class="particles">
                    <div class="particle" style="top:10%; left:30%; animation-delay:0s;"></div>
                    <div class="particle" style="top:40%; left:60%; animation-delay:1s;"></div>
                    <div class="particle" style="top:65%; left:50%; animation-delay:2s;"></div>
                    <div class="particle" style="top:85%; left:75%; animation-delay:3s;"></div>
                </div>
            </div>
        </div>

        <!-- Total Product -->
        <div class="col-md-6 col-xl-3">
            <div class="client-card">
                <div class="icon-wrapper">
                    <i class="fas fa-box-open text-danger"></i>
                </div>
                <small>Total Products</small>
                <h6>Products</h6>
                <h2>Products</h2>
                <div class="particles">
                    <div class="particle" style="top:5%; left:25%; animation-delay:0s;"></div>
                    <div class="particle" style="top:30%; left:70%; animation-delay:1s;"></div>
                    <div class="particle" style="top:60%; left:35%; animation-delay:2s;"></div>
                    <div class="particle" style="top:80%; left:80%; animation-delay:3s;"></div>
                </div>
            </div>
        </div>
    </div>

    
</div>




