@model JES.Models.CollectionViewModel

@{
    ViewData["Title"] = "Collection Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Responsive refinements */
    @@media (max-width: 575.98px) {
        #GalleryTable th:nth-child(3),
        #GalleryTable td:nth-child(3) {
            width: 1%;
            white-space: nowrap;
        }
    }

    #GalleryTable td, #GalleryTable th {
        vertical-align: middle;
    }

    .text-break {
        word-break: break-word;
        overflow-wrap: anywhere;
    }
</style>
<link href="~/css/datatables.min.css" rel="stylesheet" />

<!-- Page Header -->
<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="mb-1 text-dark">
            <i class="bi bi-images text-success me-2"></i>
            Collection Management
        </h2>
        <p class="text-muted mb-0">Upload and manage Collection images for your store.</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="GalleryIndex" class="btn btn-outline-secondary"><i class="bi bi-arrow-repeat me-1"></i>Refresh</a>
    </div>
</div>

<!-- Stats + Search -->
<div class="row g-3 mb-4">
    <div class="col-12 col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body py-3">
                <div class="d-flex align-items-center">
                    <div class="me-3 rounded-circle bg-success-subtle"
                         style="width:40px; height:40px; display:flex; align-items:center; justify-content:center;">
                        <span class="text-success fw-bold">@Model.CollectionItems.Count()</span>
                    </div>
                    <div>
                        <div class="fw-semibold">Total Collections</div>
                        <div class="text-muted small">Currently uploaded in your store</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body py-3">
                <div class="row g-2 align-items-center">
                    <div class="col-12 col-sm-8">
                        <div class="input-group">
                            <span class="input-group-text">Search</span>
                            <input type="text" id="gallerySearch" class="form-control" placeholder="Type to filter galleries..." />
                        </div>
                    </div>
                    <div class="col-6 col-sm-4">
                        <div class="input-group">
                            <span class="input-group-text">Show</span>
                            <select id="pageLength" class="form-select">
                                <option value="10">10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Form -->
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-success text-white">
                <div class="d-flex align-items-center justify-content-between">
                    <h4 class="mb-0">@((Model.CollectionItem.Id == 0) ? "Add Collection" : "Edit Collection")</h4>
                    <span class="badge bg-white text-success">
                        @((Model.CollectionItem.Id == 0) ? "New" : $"ID: {Model.CollectionItem.Id}")
                    </span>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="SaveGallery" enctype="multipart/form-data" method="post" novalidate>
                    <input type="hidden" asp-for="CollectionItem.Id" />

                    <!-- Title -->
                    <div class="mb-3">
                        <label asp-for="CollectionItem.Title" class="form-label">
                            Title <span class="text-danger">*</span>
                        </label>
                        <input asp-for="CollectionItem.Title" class="form-control" placeholder="Enter gallery title" required />
                        <span asp-validation-for="CollectionItem.Title" class="text-danger"></span>
                    </div>

                    <!-- Image Upload -->

                    <div class="mb-3">
                        <label asp-for="CollectionItem.Image" class="form-label">Image<span class="text-danger">*</span></label><br />
                        <div class="position-relative d-inline-block">
                            <img id="imagePreview"
                                 src="@(string.IsNullOrEmpty(Model.CollectionItem.ExistingImageUrl) ? "/img/download.jpg" : Model.CollectionItem.ExistingImageUrl)"
                                 class="img-thumbnail"
                                 style="height:150px; object-fit:cover;" />
                            <span id="clearImageBtn"
                                  class="position-absolute top-0 end-0 rounded-pill"
                                  style="cursor: pointer;display:inline-block;
                                                 padding-top:-3px;
                                                 font-size:1.5em;
                                                 font-weight:1000;
                                                 line-height:1;
                                                 color:#ef0b0b;
                                                 text-align:center;
                                                 white-space:nowrap;
                                                 vertical-align:baseline;">
                                &times;
                            </span>
                        </div>
                        <input asp-for="CollectionItem.Image" type="file" class="form-control mt-2" id="imageInput" accept="image/*" />
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-fill">
                            @(Model.CollectionItem.Id == 0 ? "Add Collectiom" : "Update Collectiom")
                        </button>
                        <a asp-action="Collection" class="btn btn-light border flex-fill">Clear</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- List -->
    <div class="col-md-8">
        <div class="d-flex align-items-center justify-content-between mb-2">
            <h4 class="mb-0">Collection List</h4>
            <span class="badge text-bg-light">@Model.CollectionItems.Count() total</span>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle" id="GalleryTable">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th class="text-center" style="width:160px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CollectionItems)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" style="height:30%; width:30%; object-fit:cover; border-radius:8px;" />
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center bg-light rounded" style="height:60px; width:60px;">
                                        <i class="bi bi-image text-muted"></i>
                                    </div>
                                }
                            </td>
                            <td class="fw-semibold text-break">@item.Title</td>
                            <td class="text-center">
                                <div class="d-none d-sm-inline-flex btn-group">
                                    <a asp-action="EditCollection" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <a href="#"
                                       class="btn btn-sm btn-outline-danger"
                                       data-bs-toggle="modal"
                                       data-bs-target="#confirmDeleteModal"
                                       data-delete-url="@Url.Action("DeleteCollection", new { id = item.Id })"
                                       data-gallery-title="@item.Title">Delete</a>
                                </div>
                                <div class="dropdown d-inline d-sm-none">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">Actions</button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" asp-action="EditCollection" asp-route-id="@item.Id">Edit</a></li>
                                        <li>
                                            <a class="dropdown-item text-danger" href="#"
                                               data-bs-toggle="modal"
                                               data-bs-target="#confirmDeleteModal"
                                               data-delete-url="@Url.Action("DeleteCollection", new { id = item.Id })"
                                               data-gallery-title="@item.Title">Delete</a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteLabel">Delete Gallery</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong><span id="deleteGalleryTitle"></span></strong>? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light border" data-bs-dismiss="modal">Cancel</button>
                <a id="confirmDeleteBtn" href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <script>
        // DataTable
        const dt = new DataTable('#GalleryTable', {
            pageLength: 10,
            order: [],
            lengthChange: false,
            responsive: true
        });

        // Search
        const searchInput = document.getElementById('gallerySearch');
        if (searchInput) {
            searchInput.addEventListener('keyup', function () {
                dt.search(this.value).draw();
            });
        }

        // Page Length
        const lengthSelect = document.getElementById('pageLength');
        if (lengthSelect) {
            lengthSelect.addEventListener('change', function () {
                const val = parseInt(this.value || '10', 10);
                dt.page.len(val).draw();
            });
        }

        // Delete Modal
        const deleteModal = document.getElementById('confirmDeleteModal');
        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', function (event) {
                const trigger = event.relatedTarget;
                const url = trigger ? trigger.getAttribute('data-delete-url') : '';
                const title = trigger ? trigger.getAttribute('data-gallery-title') : '';
                const confirmBtn = document.getElementById('confirmDeleteBtn');
                const deleteTitleSpan = document.getElementById('deleteGalleryTitle');
                if (confirmBtn && url) {
                    confirmBtn.setAttribute('href', url);
                }
                if (deleteTitleSpan) {
                    deleteTitleSpan.textContent = title || '';
                }
            });
        }
        // Image Preview & Clear
        const imageInput = document.getElementById('imageInput');
        const imagePreview = document.getElementById('imagePreview');
        const clearBtn = document.getElementById('clearImageBtn');

        if (imageInput) {
            imageInput.addEventListener('change', function () {
                if (this.files && this.files[0]) {
                    const reader = new FileReader();
                    reader.onload = e => {
                        imagePreview.src = e.target.result;
                        imagePreview.classList.remove('d-none');
                        clearBtn.style.display = 'block';
                    };
                    reader.readAsDataURL(this.files[0]);
                }
            });
        }

        if (clearBtn) {
            clearBtn.addEventListener('click', function () {
                if (imageInput) imageInput.value = '';
                if (imagePreview) {
                    imagePreview.src = '~/img/download.jpg';
                }
                clearBtn.style.display = 'none';
            });

            if (!imagePreview || imagePreview.src.includes('download.jpg')) {
                clearBtn.style.display = 'none';
            }
        }
    </script>
}
