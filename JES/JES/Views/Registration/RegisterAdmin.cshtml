@model MediPOS.Models.UserVm

@{
    Layout = null;
    ViewData["Title"] = "Register Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Group Pharma</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
          integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDnNQw5x5F86dIHNDz0W1yM"
          crossorigin="anonymous">
</head>
<body class="d-flex flex-column min-vh-100">

    <main class="flex-grow-1 d-flex align-items-center justify-content-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-lg border-0 my-5">
                        <div class="card-body p-5">
                            <div class="text-center mb-4">
                                <h3 class="fw-bold">Register Admin</h3>
                                <p class="text-muted small">Create a new admin account</p>
                            </div>

                            <form asp-action="RegisterAdmin" asp-controller="Registration" method="post" enctype="multipart/form-data">

                                <!-- Name -->
                                <div class="form-floating mb-3">
                                    <input asp-for="U_NAME" class="form-control" placeholder="User Name" />
                                    <label asp-for="U_NAME"></label>
                                    <span asp-validation-for="U_NAME" class="text-danger"></span>
                                </div>

                                <!-- Email -->
                                <div class="form-floating mb-3">
                                    <input asp-for="U_EMAIL" class="form-control" placeholder="Email Address" />
                                    <label asp-for="U_EMAIL"></label>
                                    <span asp-validation-for="U_EMAIL" class="text-danger"></span>
                                </div>

                                <!-- Phone -->
                                <div class="form-floating mb-3">
                                    <input asp-for="U_PHONE_NO" class="form-control" placeholder="Phone Number" />
                                    <label asp-for="U_PHONE_NO"></label>
                                    <span asp-validation-for="U_PHONE_NO" class="text-danger"></span>
                                </div>

                                <!-- Password -->
                                <div class="form-floating mb-3">
                                    <input asp-for="U_PASSWORD" type="password" class="form-control" placeholder="Password" />
                                    <label asp-for="U_PASSWORD"></label>
                                    <span asp-validation-for="U_PASSWORD" class="text-danger"></span>
                                </div>

                                <!-- Confirm Password -->
                                <div class="form-floating mb-3">
                                    <input asp-for="U_CONFIRM_PASSWORD" type="password" class="form-control" placeholder="Confirm Password" />
                                    <label asp-for="U_CONFIRM_PASSWORD"></label>
                                    <span asp-validation-for="U_CONFIRM_PASSWORD" class="text-danger"></span>
                                </div>

                                <!-- Profile Image -->
                                <div class="mb-3">
                                    <label asp-for="ProfileImage" class="form-label"></label>
                                    <input asp-for="ProfileImage" type="file" class="form-control" />
                                </div>

                                <button type="submit" class="btn btn-success w-100">Register Admin</button>
                            </form>

                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success mt-3">@TempData["Success"]</div>
                            }
                            @if (TempData["Error"] != null)
                            {
                                <div class="alert alert-danger mt-3">@TempData["Error"]</div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

@*     <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-K+ctZQop01xPvvrL1jAU6RewsG3KzB204MS+dorangeQ="
            crossorigin="anonymous"></script>

    <!-- Bootstrap 4.6.2 Bundle JS (includes Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
            crossorigin="anonymous"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        @if (TempData["Success"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'success',
                    title: 'Success!',
                    text: '@TempData["Success"]',
                    confirmButtonText: 'OK'
                            });
            </text>
        }

        @if (TempData["Error"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'error',
                    title: 'Oops!',
                    text: '@TempData["Error"]',
                    confirmButtonText: 'Try Again'
                            });
            </text>
        }
    </script>
}
